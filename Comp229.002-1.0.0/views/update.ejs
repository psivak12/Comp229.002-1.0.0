<% include partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST" >
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter name"
                        name="name" 
                        value="<%= item.name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form-control"
                        id="numberTextField"
                        placeholder="Enter number"
                        name="number" 
                        value="<%= item.number %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                        id="emailTextField"
                        placeholder="Enter email"
                        name="email" 
                        value="<%= item.email %>"
                    >
                </div>
                <br/>
              
               <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Update
                </button>
                
                <a href="/business/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

                 
                <a id="deletebutton" href="/business/delete/<%= item._id %>" class="btn btn-danger btn-md">  
                <i class="fas fa-trash-alt"></i>
                    Delete
                    </a>

            </form>
        </div>

    </div>
</div>

<% include partials/footer.ejs %>